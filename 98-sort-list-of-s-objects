public List<Account> getAccounts(List<Account> accounts) {

    if (accounts == null || accounts.isEmpty()) {
        return new List<Account>();
    }
    
    accounts.sort(new AnnualRevenueComparator());

    return accounts;
}

public class AnnualRevenueComparator implements Comparator<Account> {

    public Integer compare(Account acc1, Account acc2) {

        Integer revenue1 = acc1?.AnnualRevenue != null ? acc1.AnnualRevenue : 0;
        Integer revenue2 = acc2?.AnnualRevenue != null ? acc2.AnnualRevenue : 0;

        return revenue2.compareTo(revenue1);
    }
}